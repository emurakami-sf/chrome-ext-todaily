{
  "name": "Todaily",
  "author": "Tomer Ovadia // http://github.com/otomer",
  "version": "1.0",
  "description": "Avoid Wasting Time on Daily Standup Meetings",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options/options.html",
  "web_accessible_resources": ["alert.mp3"],
  "content_scripts": [
    {
      "matches": ["https://jira.we.co/*/*"],
      "js": [
        "lib/jquery.min.js",
        "shared/util.js",
        "shared/settings.js",
        "shared/constants.js",
        "shared/softwares.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "64": "images/logo64.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "64": "images/logo64.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}
